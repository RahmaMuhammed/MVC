@model Employee
@{
    ViewData["Title"] = "Employee Details";
}

<h1>Employee Details</h1>

<div>
    <div class="form-group">
        <div class="col-form-label">Name</div>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-form-label">Age</div>
        <input asp-for="Age" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-form-label">Salary</div>
        <input asp-for="Salary" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label">IsActive</label>
        <div>
            <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
            <label class="form-check-label">Active</label>
        </div>
    </div>


    <div class="form-group">
        <div class="col-form-label">Gender</div>
        <input asp-for="Gender" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-form-label">Email</div>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-form-label">DateOfCreation</div>
        <input asp-for="CreationDate" class="form-control" readonly />
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back To Form</a>
</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
       /// <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
       /// <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}