@model Employee
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="badge-danger"></div>

    <div class="form-group">
        <label class="col-form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-success"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label">Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-success"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label">Salary</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-success"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label">IsActive</label>
        <div>
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label">Active</label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-form-label">Gender</label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-success"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-success"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-success"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>
