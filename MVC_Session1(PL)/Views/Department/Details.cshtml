@model Department
@{
    ViewData["Title"] = "Department Details";
}

<h1>Department Details Details</h1>

<div>
    <div class="form-group">
        <div class="col-form-label">Code</div>
        <input asp-for="Code" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-form-label">Name</div>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <div class="col-form-label">DateOfCreation</div>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>

    <a  asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a  asp-action="Edit"  class="btn btn-secondary">Back To Form</a>

</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
